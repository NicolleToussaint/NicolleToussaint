print("Trying something new to push the limits")

def display_list(title, items):
    print(f"\n{title}:")
    if items:
        for i, item in enumerate(items, 1):
            print(f"{i}. {item}")
    else:
        print("No items in the list.")

def main():
    print("Welcome to the Pros and Cons List Creator! Generated by StinkieePinkiee")

    pros = []
    cons = []

    while True:
        print("\nChoose an option:")
        print("1. Add a positive")
        print("2. Add a downside")
        print("3. View list")
        print("4. Exit")

        choice = input("Enter your choice (1/2/3/4): ").strip()

        if choice == '1':
            positive = input("Enter the positive: ").strip()
            if positive:
                pros.append(positive)
                print(f"Positive added: {positive}")
            else:
                print("Empty input. Please enter a valid positive.")

        elif choice == '2':
            downside = input("Enter the downside: ").strip()
            if downside:
                cons.append(downside)
                print(f"Downside added: {downside}")
            else:
                print("Empty input. Please enter a valid downside.")

        elif choice == '3':
            display_list("Positives", pros)
            display_list("Downsides", cons)

        elif choice == '4':
            print("We are glad to help you in making better choices in life.")
            break

        else:
            print("Invalid choice. Please select a valid option.")
            
         # Comparison of lists after exiting
    print("\nFinal Lists:")
    display_list("Pros", pros)
    display_list("Cons", cons)

    if len(pros) > len(cons):
        print("\nCongrats you have more positives than anything else I hope you didnt fib.")
    elif len(cons) > len(pros):
        print("\nIt appears there are more downsides than anything else here buddy.")
    else:
        print("\nHere we have a equal tie I suppose its time to flip a coin")
 

if __name__ == "__main__":
    main()
